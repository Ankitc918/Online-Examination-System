@{
    ViewBag.Title = "Edit choice";
}
@model OnlineExam.Models.Choice


@using (Ajax.BeginForm("EditChoices", "Admin", new AjaxOptions { HttpMethod="POST"}))
{  
    @Html.AntiForgeryToken()  
      
    <div class="container form-control">  
        <h4><span class="text-primary">Edit Choice Details</span></h4>  
        <hr />  
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })  
        @Html.HiddenFor(x => x.Id)  
  
        <div class="form-group row">
            <div class="col-md-3">  
            @Html.LabelFor(x => x.Label) 
                </div> 
            <div class="col-md-8">  
                @Html.TextAreaFor(model => model.Label,new { @class="form-control"})  
                @Html.ValidationMessageFor(model => model.Label, "", new { @class = "text-danger" })  
            </div>  
        </div>  
  
        <div class="form-group row">
             <div class="col-md-3">   
            @Html.Label("Is Correct") 
                 </div> 
            <div class="col-md-2">  
                <select id="Points" name="Points" class="form-control" >
                      <option value="0">No</option>
                      <option value="2">Yes</option>
                  </select>
                @Html.ValidationMessageFor(model => model.Points, "", new { @class = "text-danger" })  
            </div>  
        </div>  
  

      <div class="form-group row">  
           <div class="col-md-3"> 
            @Html.LabelFor(model => model.IsActive)  
               </div>
            <div class="col-md-2">  
                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
               <select id="IsActive" name="IsActive" class="form-control" >
                      <option value="True">True</option>
                      <option value="False">False</option>
                  </select>
                  
            </div>  
        </div>  
        
        <div class="form-group form-inline">  
            <div class="col-md-3"></div>
            <div class="col-md-2">  
                <button type="submit" class="btn btn-primary">Save</button>  
            </div>  
        </div>  
    </div>  
} 