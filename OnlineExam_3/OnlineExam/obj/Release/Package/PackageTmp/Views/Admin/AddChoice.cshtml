@{
    ViewBag.Title = "AddChoice";
}
@model OnlineExam.Models.Choice



  
@using (Ajax.BeginForm("AddChoice", "Admin", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess", OnFailure = "OnFailure" }))
{  
    @Html.AntiForgeryToken()  
      
    <div class="container form-control">  
        <h4><span class="text-primary">Add Choice</span></h4>  
        <hr />  
        <div class=" form-group">
       <strong>Q. @ViewBag.ques</strong>
    </div>  
        <div class="form-group row">
            <div class="col-md-3" > 
            @Html.LabelFor(model => model.Label) : </div>
            <div class="col-md-5">  
                @Html.TextAreaFor(x => x.Label, new { @class="form-control"})     
                @Html.ValidationMessageFor(x=>x.Label,"label required")         
            </div>  
        </div>  
  
      
   <div class="form-group row"> 
       <div class="col-md-3" >  
            @Html.Label("Is Correct") 
                 </div> 
            <div class="col-md-2">  
                <select id="Points" name="Points" class="form-control" >
                      <option value="0">No</option>
                      <option value="2">Yes</option>
                  </select>
            </div>  
        </div> 
         <div class="form-group row">  
             <div class="col-md-3" > 
            @Html.LabelFor(model => model.IsActive) : </div>
            <div class="col-md-2">  
                 <select id="IsActive" name="IsActive" class="form-control" >
                      <option value="True">True</option>
                      <option value="False">False</option>
                  </select>
               
            </div>  
        </div>   
        <div class="form-group">  
             <div class="col-md-3"></div>
            <div class="col-md-2">  
                      <button type="submit" class="btn btn-success">Add Choice</button>
            </div>  
        </div>  
    </div>  
}  
 
