                @Html.TextBoxFor(model => model.Points, new { @class="form-control"})  
               
            </div>  
        </div> 
         <div class="form-group row">  
             <div class="col-md-3" > 
            @Html.LabelFor(model => model.IsActive) : </div>
            <div class="col-md-2">  
                @Html.ValidationMessageFor(x=>x.IsActive,"select type")
