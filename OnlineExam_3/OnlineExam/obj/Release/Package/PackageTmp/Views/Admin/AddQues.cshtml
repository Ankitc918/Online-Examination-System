@{
    ViewBag.Title = "Add Question";
}



@model OnlineExam.Models.AddQues  

@using (Ajax.BeginForm("AddQues", "Admin", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess", OnFailure = "OnFailure" }))
{  
    @Html.AntiForgeryToken()  
      
    <div class="container form-control">  
        <h4><span class="text-primary">Add Question</span></h4>  
        <hr />  
        @Html.HiddenFor(model => model.TestId, new { @class="form-control"})  

       <div class="form-group row"> 
          <div class="col-md-3" >  
            @Html.Label("Question") : </div>
            <div class="col-md-8">  
                @Html.TextAreaFor(model => model.Question, new { @class="form-control"})  
               
            </div>  
        </div>

