@{
    ViewBag.Title = "Delete Choice";
}


@model OnlineExam.Models.Choice  
  
 
  
@using (Html.BeginForm())  
{  
    @Html.AntiForgeryToken()  
      
    <div class="container form-control">  
        <h4><span class="text-primary">Delete Choice</span></h4>  
        <hr />  
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })  
        @Html.HiddenFor(model => model.Id)  
  
        <div class="form-group row">
            <div class="col-md-3" > 
            @Html.LabelFor(model => model.Label) </div>
            <div class="col-md-5">  
                @Html.DisplayFor(model => model.Label, new { @class="form-control"})  
               
            </div>  
        </div>  
  
   <div class="form-group row"> 
       <div class="col-md-3" >  
            @Html.LabelFor(model => model.Points)  </div>
            <div class="col-md-5">  
                @Html.DisplayFor(model => model.Points, new { @class="form-control"})  
               
            </div>  
        </div> 
         <div class="form-group row">  
             <div class="col-md-3" > 
            @Html.LabelFor(model => model.IsActive)  </div>
            <div class="col-md-5">  
                @Html.DisplayFor(model => model.IsActive, new { @class="form-control"})  
               
            </div>  
        </div>   
        <div class="form-group row">  
            <div class="col-md-3"></div>
            <div class="col-md-3">      
                      <button type="submit" class="btn btn-danger">Confirm Delete</button>
                   
            </div>  
        </div>  
    </div>  
}  
  